@model Messages
<h1>Coding Dojo Wall</h1>

<h2>Welcome @ViewBag.User.FirstName @ViewBag.User.LastName</h2>

<a href = "/logout">Log out</a>

<h2>Post a Message</h2>
<form asp-action="MessageProcess" asp-controller="Message" method="post">
    <span asp-validation-for="message"></span><br>
    <textarea asp-for="message" rows="5" cols="70"></textarea><br>
    <button>Post a Message</button>
</form>
